<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/settings_layout">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="26dp"
        android:text="Set Reminder :"
        android:textSize="22sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/alarm_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="26dp"
        android:theme="@style/DialogTheme"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_margin="26dp"
        android:text="auto pronounce text"
        android:textSize="22sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/alarm_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_view"
        android:layout_alignParentEnd="true"
        android:layout_margin="26dp"
        android:theme="@style/DialogTheme"/>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_margin="26dp"
        android:text="show arabic translation"
        android:textSize="22sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/alarm_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_view2"
        android:layout_alignParentEnd="true"
        android:layout_margin="26dp"
        android:theme="@style/DialogTheme"/>

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt3"
        android:layout_margin="26dp"
        android:text="Dark mode"
        android:textSize="22sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/alarm_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_view3"
        android:layout_alignParentEnd="true"
        android:layout_margin="26dp"
        android:theme="@style/DialogTheme" />

</RelativeLayout>